@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="relative py-16 bg-white min-w-screen animation-fade animation-delay">
    <div class="container px-0 px-8 mx-auto sm:px-12 xl:px-5">
        <form method="post">
            <h3 class="mt-1 text-2xl font-bold text-left text-gray-800 sm:mx-6 sm:text-3xl md:text-4xl lg:text-5xl sm:text-center sm:mx-0">
                Enter some
                <select asp-for="InputFormat" asp-items="Html.GetEnumSelectList<Format>()"
                        style="display:inline;outline:none;">
                </select>
            </h3>
            <p id="genData" class="text-xs font-bold text-left text-pink-500 uppercase sm:mx-6 sm:text-center sm:text-normal sm:font-bold">
                Or, press me to generate some.
            </p>
            <div class="w-full mx-auto mt-10 bg-white border border-gray-200 rounded-lg p-1 sm:shadow lg:w-5/6 xl:w-2/3">
                <textarea asp-for="Input" class="w-full outline-none">

                </textarea>
            </div>
            <div class="text-center py-4">
                <button type="submit" class="inline-flex items-center justify-center px-4 py-2 text-base font-medium leading-6 text-white whitespace-no-wrap bg-blue-600 border border-blue-700 rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Convert
                </button>
            </div>
        </form>
    </div>
</section>
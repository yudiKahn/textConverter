@model Text_Convertor.Models.FormModel


<!-- Section 1 -->
<section class="w-full px-8 py-16 bg-gray-100 xl:px-8">
    <div class="max-w-5xl mx-auto">
        <div class="flex flex-col items-center md:flex-row justify-center">
        
            @using (Html.BeginForm("convert", "home", FormMethod.Post, new { @class="w-full mt-16 md:mt-0 md:w-2/5" }))
            {
             <div class="relative z-10 h-auto p-8 py-10 overflow-hidden bg-white border-b-2 border-gray-300 rounded-lg shadow-2xl px-7">
                    <h3 class="mb-6 text-2xl font-medium text-center">Your Input Language :</h3>
             
                    @Html.TextArea("text", new {@class="block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 rounded-lg focus:ring focus:ring-purple-500 focus:outline-none"})
                    <div class="block">
                        <button type="submit" class="w-full px-3 py-4 font-medium text-white bg-purple-500 rounded-lg">Convert</button>
                    </div>
              </div>   
            }

        </div>
    </div>
</section>

